        }

        .region-card {
            background: white;
            border-radius: 12px;
            padding: 40px;
            width: 300px;
            text-decoration: none;
            color: #1a1a1a;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            box-shadow: 0 10px 40px rgba(0,0,0,0.2);
        }

        .region-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
        }

        .region-card .flag {
            font-size: 3rem;
            margin-bottom: 20px;
        }

        .region-card h3 {
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 10px;
            color: #0066cc;
        }

        .region-card p {
            color: #4a4a4a;
            font-size: 0.95rem;
            line-height: 1.5;
        }

        .region-card .arrow {
            display: inline-block;
            margin-top: 20px;
            color: #00a86b;
            font-weight: 600;
        }

        @media (max-width: 680px) {
            .regions {
                flex-direction: column;
                align-items: center;
            }

            .logo h1 {
                font-size: 1.8rem;
            }

            h2 {
                font-size: 1.2rem;
            }
        }
    </style>
